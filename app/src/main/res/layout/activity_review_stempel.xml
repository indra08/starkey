<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.starkey.pelanggan.Stempel.ReviewStempel.ReviewStempelActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarReviewStempel">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarReviewStempel"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.AppBarOverlay" >

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_below="@+id/appBarReviewStempel">

            <!-- START CV DETAIL STEMPEL -->
            <android.support.v7.widget.CardView
                android:id="@+id/cvDetailStempel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/labelStempel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stempel:"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/tvStempel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="valueStempel"
                        android:layout_toRightOf="@+id/labelStempel"
                        android:textSize="18dp"
                        android:layout_marginLeft="4dp"/>

                    <TextView
                        android:id="@+id/labelUkuran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_below="@+id/labelStempel"
                        android:text="Ukuran:"/>

                    <TextView
                        android:id="@+id/tvUkuranStempel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="valueUkuranStempel"
                        android:layout_toRightOf="@+id/labelUkuran"
                        android:textSize="18dp"
                        android:layout_marginLeft="4dp"
                        android:layout_below="@+id/tvStempel"/>

                    <TextView
                        android:id="@+id/labelJumlah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah:"
                        android:layout_below="@+id/labelUkuran"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/tvJumlahStempel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="valueJumlahStempel"
                        android:layout_toRightOf="@+id/labelJumlah"
                        android:textSize="18dp"
                        android:layout_marginLeft="4dp"
                        android:layout_below="@+id/tvUkuranStempel"/>

                    <TextView
                        android:id="@+id/labelKeteranganStempel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Keterangan:"
                        android:layout_below="@+id/labelJumlah"/>

                    <TextView
                        android:id="@+id/tvKeteranganStempel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="valueKeterangan"
                        android:layout_below="@+id/labelKeteranganStempel"
                        android:lines="3"
                        android:maxLines="3"/>

                    <Button
                        android:id="@+id/btnUbahReviewStempel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ubah"
                        android:layout_below="@+id/tvKeteranganStempel"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <!-- END CV DETAIL STEMPEL -->


            <!-- START CV ALAMAT ANTAR STEMPEL -->
            <android.support.v7.widget.CardView
                android:id="@+id/cvAlamatAntarStempel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvDetailStempel"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imgViewAlamatAntarStempel"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_map_cust_starkey_stempel"/>

                    <TextView
                        android:id="@+id/tvAlamatAntarStempel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="alamat antar"
                        android:layout_toRightOf="@id/imgViewAlamatAntarStempel"
                        android:lines="3"
                        android:maxLines="3"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <!-- END CV ALAMAT ANTAR STEMPEL -->



            <!-- START CV ESTIMASI HARGA STEMPEL -->
            <android.support.v7.widget.CardView
                android:id="@+id/cvEstimasiHargaStempel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvAlamatAntarStempel"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/labelEstimasiStempel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Estimasi Biaya:"/>

                    <TextView
                        android:id="@+id/labelLayananStempel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelEstimasiStempel"
                        android:text="Layanan:"/>

                    <TextView
                        android:id="@+id/tvLayananStempel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelEstimasiStempel"
                        android:layout_alignParentRight="true"
                        android:text="Rp.0"/>

                    <TextView
                        android:id="@+id/labelItemStempel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelLayananStempel"
                        android:text="Item:"/>

                    <TextView
                        android:id="@+id/tvItemStempel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelLayananStempel"
                        android:layout_alignParentRight="true"
                        android:text="Rp.0"/>

                    <TextView
                        android:id="@+id/labelTotalStempel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total:"
                        android:layout_below="@+id/labelItemStempel"/>

                    <TextView
                        android:id="@+id/tvTotalStempel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelItemStempel"
                        android:layout_alignParentRight="true"
                        android:text="Rp.0"
                        android:textColor="@color/colorMerah"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorHijau"
                        android:layout_below="@+id/labelTotalStempel"
                        android:text="Catatan : Belum Termasuk Biaya Antar"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <!-- END CV ESTIMASI HARGA STEMPEL -->
        </RelativeLayout>

    <Button
        android:id="@+id/btnOrderStempel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="order"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_button"
        android:textStyle="bold"/>

</RelativeLayout>
