<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/background_hitam"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!--

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_round" />
        -->

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/gambarHeader"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/namaHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="nama customer"
        android:layout_below="@+id/gambarHeader"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="serif-monospace"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/emailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cust@email.com"
        android:layout_below="@+id/namaHeader"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/phoneHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0123"
        android:layout_below="@+id/emailHeader"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"/>

</RelativeLayout>
