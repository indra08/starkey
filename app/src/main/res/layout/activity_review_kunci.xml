<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.starkey.pelanggan.Kunci.ReviewKunci.ReviewKunciActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarReviewKunci">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarReviewKunci"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.AppBarOverlay" >

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarReviewKunci">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <!-- START CV TOP -->
            <android.support.v7.widget.CardView
                android:id="@+id/cvTopKunci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/labelTransaksiKunci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaksi"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/labelHargaReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                    <View
                        android:id="@+id/line"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/empty"
                        android:layout_below="@+id/labelTransaksiKunci"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/labelJenisKunci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duplikat Kunci Gerbang"
                        android:layout_below="@+id/line"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/labelQtyKunci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_below="@+id/line"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/labelKeteranganKunci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelJenisKunci"
                        android:text="kuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikuncikunci"
                        android:layout_marginTop="8dp"/>


                    <Button
                        android:id="@+id/btnUbahReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelKeteranganKunci"
                        android:layout_marginTop="8dp"
                        android:text="Ubah"/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <!-- END CV TOP -->


            <!-- START CV MID -->
            <android.support.v7.widget.CardView
                android:id="@+id/cvMidKunci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvTopKunci"
                android:layout_marginTop="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/labelAlamatAntarKunci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat Antar"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/labelUbah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ubah"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"/>

                    <View
                        android:id="@+id/lineMid"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/empty"
                        android:layout_below="@+id/labelAlamatAntarKunci"
                        android:layout_marginTop="8dp"/>

                    <ImageView
                        android:id="@+id/icAlamat"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="15dp"
                        android:src="@drawable/ic_action_marker"
                        android:layout_below="@+id/lineMid"/>

                    <TextView
                        android:id="@+id/tvAlamatAntar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CV EZATECH"
                        android:maxLines="3"
                        android:lines="3"
                        android:textColor="@color/colorHitam"
                        android:layout_below="@+id/lineMid"
                        android:layout_toRightOf="@+id/icAlamat"
                        android:layout_marginTop="8dp"/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <!-- END CV MID -->

            <!-- START CV BOTTOM -->
            <android.support.v7.widget.CardView
                android:id="@+id/cvBottomKunci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvMidKunci"
                android:layout_marginTop="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/labelDetailKunci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rincian Harga"
                        android:textSize="16dp"
                        android:textStyle="bold"/>

                    <View
                        android:id="@+id/lineBottom"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/empty"
                        android:layout_below="@+id/labelDetailKunci"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/labelTransaksiReviewKunci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biaya Layanan"
                        android:layout_below="@+id/lineBottom"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/labelhargaReviewBawah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 0"
                        android:layout_below="@+id/lineBottom"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/labelBiayaItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelTransaksiReviewKunci"
                        android:text="Biaya Item (sesuai jumlah qty)"/>

                    <TextView
                        android:id="@+id/labelBiayaItemValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 0"
                        android:layout_below="@+id/labelhargaReviewBawah"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/labelCatatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catatan : Belum Termasuk Biaya Antar"
                        android:layout_below="@+id/labelBiayaItem"
                        android:textColor="@color/colorHijau"
                        android:textStyle="bold"/>

                    <View
                        android:id="@+id/lineBottom2"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/empty"
                        android:layout_below="@+id/labelCatatan"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/labelBiaya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Estimasi Biaya"
                        android:layout_below="@+id/lineBottom2"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/labelBiayaValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:textColor="@color/colorMerah"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/lineBottom2"
                        android:layout_marginTop="8dp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <!-- END CV BOTTOM -->

            <Button
                android:id="@+id/btnspace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvBottomKunci"
                android:visibility="invisible"/>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order"
        android:background="@drawable/background_button"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
