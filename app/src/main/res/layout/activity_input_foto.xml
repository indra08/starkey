<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_hitam"
    tools:context="id.starkey.pelanggan.Daftar.InputFotoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_abuabu"
            android:text="Register"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Button
            android:id="@+id/cbUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Foto"
            android:background="@drawable/background_button"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="14dp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            android:text="Skip"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv1"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="Foto Profil"
        android:textColor="@color/cardview_light_background"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageViewBulat"
        android:layout_centerInParent="true"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_add_large"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="@color/colorPrimary"
        android:scaleType="centerCrop"/>

    <!--
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_account_circle_black_24dp"/>
        -->

</RelativeLayout>
