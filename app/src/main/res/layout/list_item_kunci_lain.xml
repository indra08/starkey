<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewKunciLain"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <RelativeLayout
            android:id="@+id/rlayoutkuncilain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp">

            <ImageView
                android:id="@+id/imgKunciLain"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvTypeKunciLain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type Kunci"
                android:layout_below="@+id/imgKunciLain"
                android:layout_centerHorizontal="true"
                android:maxLines="3"/>

            <TextView
                android:id="@+id/tvMerkKunciLain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merk"
                android:layout_below="@+id/tvTypeKunciLain"
                android:layout_centerHorizontal="true"
                android:textColor="@color/merkColor"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tvHargaKunciLain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:layout_below="@+id/tvMerkKunciLain"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorMerah"/>

            <TextView
                android:id="@+id/tvTampungGbrKunciLain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>