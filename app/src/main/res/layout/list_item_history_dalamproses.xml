<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageViewDalamProses"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_dalam_proses"/>

            <TextView
                android:id="@+id/tvNamaLayananKunciDalamProses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageViewDalamProses"
                android:layout_marginLeft="10dp"
                android:text="namalayanankunci"/>

            <TextView
                android:id="@+id/tvNamaItemDalamProses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="namaitem"
                android:layout_below="@+id/tvNamaLayananKunciDalamProses"
                android:layout_toRightOf="@+id/imageViewDalamProses"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tvBiayaDalamProses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="biaya"
                android:layout_toRightOf="@+id/imageViewDalamProses"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tvNamaItemDalamProses"/>



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>